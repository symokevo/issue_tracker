<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Projects</h1>
  
  <div class="mb-6">
    <%= link_to "New Project", new_project_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @projects.each do |project| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to project.title, project, class: "text-blue-600 hover:text-blue-800" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= truncate(project.description, length: 50) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to 'Edit', edit_project_path(project), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
              <%= link_to 'Destroy', project, method: :delete, 
                  data: { 
                    confirm: 'Are you sure?',
                    turbo_method: :delete 
                    }, 
                  class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>