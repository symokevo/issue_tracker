<h1 class="text-2xl font-bold mb-6">Issues Report for <%= @project.title %></h1>

<table class="w-full border-collapse">
  <thead>
    <tr class="bg-gray-200">
      <th class="p-2 border">Title</th>
      <th class="p-2 border">Status</th>
      <th class="p-2 border">Priority</th>
      <th class="p-2 border">Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td class="p-2 border"><%= issue.title %></td>
        <td class="p-2 border"><%= issue.status %></td>
        <td class="p-2 border"><%= issue.priority %></td>
        <td class="p-2 border"><%= issue.created_at.strftime('%Y-%m-%d %H:%M') %></td>
      </tr>
    <% end %>
  </tbody>
</table>